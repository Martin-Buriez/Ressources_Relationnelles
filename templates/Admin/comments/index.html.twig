{% extends 'Admin/admin_base.html.twig' %}

{% block title %}Les Commentaires signalés{% endblock %}

{% block body %}
    <div class="mt-12 lg:mt-20 xl:mt-24 mx-4">
        <h1 class="text-black underline mb-4 text-xl">Les commentaires signalés</h1>
        <div class="w-full overflow-hidden rounded-lg shadow-xs">
            <div class="w-full overflow-x-auto">
                <table class="w-full ">
                    <thead>
                        <tr class="font-extrabold tracking-wide text-left uppercase border-b bg-blue1 text-black dark:text-white">
                            <th class="px-4 py-3">Titre</th>
                            <th class="px-4 py-3">Contenu</th>
                            <th class="px-4 py-3">Action</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700 bg-gray-800">
                    {% for comment in comments %}
                        <tr class="hover:bg-white bg-blue2 text-black">
                            <td class="px-4 py-3">
                                {{ comment.title }}
                            </td>
                            <td class="px-4 py-3">
                                {{ comment.content }}
                            </td>
                            <td class="px-2 py-2 text-black">
                                <a onclick="confirm('Supprimer le commentaire ?')" class="ml-8" href="{{ path('delete_comments', {'idComment': comment.id }) }}">
                                    <i class="text-red-400 fas fa-trash mr-1">Supprimer</i>
                                </a>
                                <a class="ml-8"  href="{{ path('cancel_reported_comments', {'idComment': comment.id }) }}">
                                    <i class="text-green-400 fas fa-check mr-1">Valider</i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
