{% extends 'Admin/admin_base.html.twig' %}

{% block title %}Ressources à valider!{% endblock %}

{% block body %}
    {% for publication in publications %}
        <div class="w-8/12 p-6 mx-auto mt-4">
            <div class="bg-gradient-to-b from-yellow-400 to-yellow-200 border-b-4 border-yellow-600 rounded-lg shadow-xl p-5">
                <div class="flex flex-row items-center">
                    <div class="flex-1 text-right md:text-center">
                        <h2 class="font-bold uppercase text-gray-600 underline">{{publication.title}}</h2>
                        <div class="flex justify-between"> 
                            <h2 class="font-bold uppercase text-gray-600 ">thème : {{publication.theme.name}}</h2>
                            <h2 class="font-bold uppercase text-gray-600 ">Catégorie : {{publication.category.title}}</h2>
                        </div>
                        <p class="font-bold text-2xl">{{publication.description}}</p>
                        <p class="mt-4">{{publication.createdBy.username}}</p>
                    </div>
                </div>
                <div class="flex justify-center w-full mt-10 ">
                    <div class="w-2/5 mx-5">
                        <a href="{{ path('admin_delete_publication', {'idPublication': publication.id }) }}" class= 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue1 rounded-md hover:text-main-blue hover:bg-main-light-blue focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50'>Supprimer</a>
                    </div>
                    <div class="w-2/5 mx-5">
                        <a href="{{ path('state_validated_publication', {'idPublication': publication.id }) }}" class= 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue1 rounded-md hover:text-main-blue hover:bg-main-light-blue focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50'>Ajouter</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}