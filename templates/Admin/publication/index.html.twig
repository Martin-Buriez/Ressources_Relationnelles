{% extends 'Admin/admin_base.html.twig' %}

{% block title %}Ressources à valider!{% endblock %}

{% block body %}
    <div class="bg-main-white pt-3 mb-4">
        <div class="rounded-tl-3xl bg-gradient-to-r from-blue1 to-gray-600 p-4 shadow text-2xl text-white">
            <h1 class="font-bold pl-2">Les Ressources à valider </h1>
        </div>
    </div>
    {% for publication in publications %}
        <div class="w-11/12 p-6 mx-auto mt-4">
            <div class="bg-gradient-to-b border-b-4 bg-blue2 border-blue1 rounded-lg shadow-xl p-5">
                <div class="flex flex-row items-center">
                    <div class="flex-1 text-right md:text-center">
                        <h2 class="font-bold text-3xl text-blue1">{{publication.title}}</h2>
                        <div class="flex justify-between mb-6">
                            <h2 class="font-bold uppercase text-black">thème : {{publication.theme.name}}</h2>
                            <h2 class="font-bold uppercase text-black">Catégorie : {{publication.category.title}}</h2>
                        </div>
                        <p class="font-bold text-grey4">{{publication.description}}</p>
                        <p class="mt-4 text-black">{{publication.createdBy.username}}</p>
                    </div>
                </div>
                <div class="flex justify-center w-full mt-10 ">
                    <div class="w-2/5 mx-5">
                        <div class="flex justify-center">
                            <a href="{{ path('admin_delete_publication', {'idPublication': publication.id }) }}" class= 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue1 rounded-md hover:text-main-blue hover:bg-main-light-blue focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50'>Supprimer</a>
                        </div>
                    </div>
                    <div class="flex justify-center w-2/5 mx-5">
                        <a href="{{ path('state_validated_publication', {'idPublication': publication.id }) }}" class= 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue1 rounded-md hover:text-main-blue hover:bg-main-light-blue focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50'>Ajouter</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}