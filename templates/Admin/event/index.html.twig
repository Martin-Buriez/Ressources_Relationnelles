{% extends 'Admin/admin_base.html.twig' %}

{% block title %}Hello AdminEventController!{% endblock %}

{% block body %}
    <div class="bg-main-white pt-3 mb-4">
        <div class="rounded-tl-3xl bg-gradient-to-r from-blue1 to-gray-600 p-4 shadow text-2xl text-white">
            <h1 class="font-bold pl-2">Les Evénements à valider </h1>
        </div>
    </div>
    {% for event in events %}
        <div class="w-8/12 p-6 mx-auto mt-4">
            <div class="bg-gradient-to-b from-yellow-400 to-yellow-200 border-b-4 border-yellow-600 rounded-lg shadow-xl p-5">
                <div class="flex flex-row items-center">
                    <div class="flex-1 text-right md:text-center">
                        <h2 class="font-bold uppercase text-gray-600 underline">{{event.title}}</h2>
                        <div class="flex justify-between"> 
                            <h2 class="font-bold uppercase text-gray-600 ">thème : {{event.theme.name}}</h2>
                        </div>
                        <p class="font-bold text-2xl">{{event.content}}</p>
                    </div>
                </div>
                <p class="font-bold text-2xl">Prévu le : {{event.plannedDate|date('Y-m-d')}}</p>
                <p class="font-bold text-2xl">Organisé par  : {{event.userManageEvents[0].user.username}}</p>
                <div class="flex justify-center w-full mt-10 ">
                    <div class="w-2/5 mx-5">
                        <a href="{{ path('admin_delete_event', {'idEvent': event.id }) }}" class= 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue1 rounded-md hover:text-main-blue hover:bg-main-light-blue focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50'>Supprimer</a>
                    </div>
                    <div class="w-2/5 mx-5">
                        <a href="{{ path('admin_validate_event', {'idEvent': event.id }) }}" class= 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue1 rounded-md hover:text-main-blue hover:bg-main-light-blue focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50'>Ajouter</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
