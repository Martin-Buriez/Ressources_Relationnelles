{% extends 'base.html.twig' %}

{% block title %}Amis !{% endblock %}

{% block body %}
    <div class="flex w-full mt-20">
        {% include "partials/siderbar.html.twig" %}
        <div class="w-5/12 bg-yellow-300 mx-auto">
            <table class="w-full ">
                <thead>
                    <tr class="font-extrabold tracking-wide text-left uppercase border-b bg-blue1 text-black dark:text-white">
                        <th class="px-4 py-3">Pseudo de vos amis :</th>
                        <th class="px-4 py-3">State :</th>
                        <th class="px-4 py-3">Date de création :</th>
                        <th class="px-4 py-3">Actions :</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700 bg-gray-800">
                {% for item in userEntity %}
                    {% for relationship in item.userRelationships %}
                        <tr class="hover:bg-white bg-blue2 text-black">
                        {% if relationship.userSender.id == app.user.id %}
                            <td class="px-4 py-3">
                                <a target="_blank" rel="noreferrer noopener" href="#">
                                    {{relationship.userReceive.username}}
                                </a>
                            </td>
                            <td class="px-4 py-3">
                                <a target="_blank" rel="noreferrer noopener" href="#">
                                    {% if relationship.state is same as(false) %}
                                        <li>En attente</li>
                                    {% else %}
                                        <li>Validé</li>
                                    {% endif %}
                                </a>
                            </td>
                            <td class="px-4 py-3">
                                <a target="_blank" rel="noreferrer noopener" href="#">
                                    {{relationship.createdAt|date('Y-m-d')}}
                                </a>
                            </td>
                            <td class="px-4 py-3">
                                
                                <a onclick="confirm('Supprimer cet utilisateur à vos amis ?')" class="ml-8" href="{{ path('user_delete_friend', {'idRelationShip': relationship.id}) }}"><i class="fas fa-user-times pr-4"></i></a>
                            </td>
                        {% endif %}
                        </tr>
                    {% endfor %}
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="alert">
                        {{ message }}
                    </div>
                {% endfor %}
            </table>
        </div>
        <div class="w-4/12 bg-blue2 mx-auto">
            <h1 class="text-3xl underline font-bold text-left">Retrouver des amis !</h1>
            <form action="{{ path('user_friend') }}" method="get" class="w-full">
                <div class="flex w-5/12  my-4 input-group">
                    <input type="text" class="form-control" name="search" placeholder="Rechercher...">
                    <div class="input-group-append">
                        <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
            {% if search is defined %}
                <p>Résultats pour "{{ search }}" :</p>
            {% endif %}
            {% if userFilter is not empty %}
            <table class="w-full ">
                <thead>
                    <tr class="font-extrabold tracking-wide text-left uppercase border-b bg-blue1 text-black dark:text-white">
                        <th class="px-4 py-3">Nom :</th>
                        <th class="px-4 py-3">Prenom :</th>
                        <th class="px-4 py-3">Pseudo :</th>
                        <th class="px-4 py-3">Action :</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700 bg-gray-800">
                {% for item in userFilter %}
                    <tr class="hover:bg-white bg-blue2 text-black">
                        <td class="px-4 py-3">
                            <a target="_blank" rel="noreferrer noopener" href="#">
                                {{ item.lastname }}
                            </a>
                        </td>
                        <td class="px-4 py-3">
                            {{ item.firstname }}
                        </td>
                        <td class="px-4 py-3">
                            {{ item.username }}
                        </td>
                        <td class="px-4 py-3 text-black">
                            <a onclick="confirm('Ajouter cet utilisateur à vos amis ?')" class="ml-8" href="{{ path('user_add_friend', {'idUserReceive': item.id, 'idUserSender': app.user.id}) }}"><i class="fas fa-user-plus pr-4"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
            {% else %}
                <p>Aucun utilisateur trouvé.</p>
            {% endif %}
        </div>
    </div>
    {% for message in app.flashes('Erreur') %}
        <div class="alert">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}