{% extends 'base.html.twig' %}

{% block title %}Hello UserCreateEventController!{% endblock %}

{% block body %}
    <section class="bg-blue2 w-full">
        <div class="w-full h-1/5 bg-blue1 shadow-lg py-16">
            <h1 class="text-center font-bold text-5xl text-white">Votre évenements</h1>
            <div class="mx-auto h-px w-40 bg-white mt-8"></div>
        </div>
        <div class="w-full px-36 mt-10">
            <div class="flex justify-center">
                <div class="w-5/6 border border-blue1 mt-5 px-5 py-5 bg-white">
                    <h2 class="text-xl font-bold text-red-600 mb-4">Quelques règles pour les publications :</h2>
                    <p class="mb-2">• <span class="underline">Respectez la vie privée des autres</span> : Évitez de publier des informations ou des photos qui pourraient nuire à la vie privée ou à la sécurité des autres utilisateurs.</p>
                </div>
            </div>
            <div class="flex justify-center mt-10">
                <div class="w-5/6 border border-blue1 shadow-lg px-10 py-10 bg-white mb-8">
                    {{ form_start(eventForm) }}
                    <div class="flex">
                        <div class="w-1/2">
                            {{ form_row(eventForm.theme) }}
                        </div>
                    </div>
                    <div class="flex justify-center">
                        <div class="mt-8 w-2/3">
                            {{ form_row(eventForm.title) }}
                        </div>
                    </div>
                    <div class="flex justify-center">
                        <div class="mt-10 w-full">
                            {{ form_row(eventForm.content) }}
                        </div>
                    </div>
                    <div class="mt-8">
                        {{ form_row(eventForm.reward) }}
                    </div>
                    <div class="mt-8">
                        {{ form_row(eventForm.plannedDate) }}
                    </div>
                    <div class="flex justify-center w-full mt-10">
                        <div class="w-2/5 mx-5">
                            {{ form_row(eventForm.submit) }}
                        </div>
                        <div class="w-2/5 mx-5">
                            <button class= 'w-full px-4 py-2 tracking-wide text-white transition-colors duration-200 transform bg-blue1 rounded-md hover:text-main-blue hover:bg-main-light-blue focus:outline-none focus:bg-blue-400 focus:ring focus:ring-blue-300 focus:ring-opacity-50'>Annuler</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
            <div class="flex bg-white justify-center space-x-4">
                <div class="w-5/12">
                </div>
            </div>
            {{ form_end(eventForm) }}
        </div>
    </div>
</div>
{% endblock %}
